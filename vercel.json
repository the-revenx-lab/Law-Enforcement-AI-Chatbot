{
    "version": 2,
    "builds": [
        {
            "src": "chat.py",
            "use": "@vercel/python"
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/static/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/chat.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1",
        "PYTHONPATH": ".",
        "ALLOWED_ORIGINS": "https://law-enforcement-ai-chatbot.vercel.app,http://localhost:8080",
        "DATABASE_URL": "@database_url"
    }
} 